{
    "preset": "psr12",
    "rules": {
        "concat_space": {
            "spacing": "one"
        },
        "binary_operator_spaces": {
            "operators": {
                "=>": "align_single_space_minimal"
            }
        },
        "new_with_braces": {
            "anonymous_class": false
        },
        "heredoc_to_nowdoc": false,
        "unary_operator_spaces": true,
        "method_chaining_indentation": true,
        "array_indentation": true
    }
}
