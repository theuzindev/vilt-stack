{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [ "./resources/src/*" ]
        }
    },
    "include": [ "resources/src/**/*.ts", "resources/src/**/*.d.ts", "resources/src/**/*.vue" ]
}
